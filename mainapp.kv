WidgetsTest:

<WidgetsTest>:
    cols:2
    Button:
        text: "Click me!"
        on_press: root.button_click()
    Label:
        text: str(root.count)
    

<PageLayoutTest@PageLayout>:
    GridLayoutTest:
    AnchorLayoutTest:
    ScrollViewTest:

<ScrollViewTest@ScrollView>:
    StackLayoutTest:
        size_hint: 1, None
        height: self.minimum_height

#Makes the gridlayouttest be a type of grid layout
<GridLayoutTest@GridLayout>:
    rows:4
    cols:2
    Button:
        text: "a"
        size_hint: 1, .5
    Button:
        text: "b"
        size_hint: 1, .5
    Button:
        text: "c"
    Button:
        text: "d"
    Button:
        text: "e"
    #Embedding layouts to layouts
    AnchorLayoutTest:

<AnchorLayoutTest>:
    anchor_x: "center"
    anchor_y: "top"
    BoxLayout:
        size_hint: .33, .33
        Button:
            text: "a"
        Button:
            text: "b"
    

<MainWidget>:
    orientation: "vertical"
    Button:
        text: "Hello World!"
    BoxLayout:
        size_hint: 1, 1.5
        orientation: "horizontal"
        spacing: "10dp"
        Button:
            text: "a"
        Button:
            text: "b"
        Button:
            text: "c"
    Button:
        text: "c"